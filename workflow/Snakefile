import os, glob, pathlib, json, re, multiprocessing as mp, psutil
ENV_YAML  = os.path.join(os.getcwd(), "env", "environment.yml")
configfile: "workflow/config.yaml"

DATASETS  = config["datasets"]
SIG_SIZES = config["sig_sizes"]
RUN_CORES = str(config.get("run_cores", "NA"))
###############################################################################
# -------------------------  default target  ----------------------------------
###############################################################################
def _inputs_all(wc):
    lst  = expand("results/{ds}/stage1/summary_stage1.tsv", ds=DATASETS)
    lst += expand("results/{ds}/stage2/summary_stage2.tsv", ds=DATASETS)
    lst += expand("results/{ds}/stage1/system_info.json",   ds=DATASETS)
    lst += expand("results/{ds}/stage2/metrics_k{K}.tsv",   ds=DATASETS, K=SIG_SIZES)
    lst += expand("figures/{ds}/runtime/Speed_up.png",      ds=DATASETS)
    lst += expand("figures/{ds}/stage1_summary/{plot}.png", ds=DATASETS,
                  plot=["MCE","Sensitivity","Specificity","SL_weights"])
    lst += expand("figures/{ds}/stage2_summary/{plot}.png", ds=DATASETS,
                  plot=["MCE","Sensitivity","Specificity","SL_weights"])
    lst += expand("figures/{ds}/stage1_k{K}", ds=DATASETS, K=SIG_SIZES)
    lst += expand("figures/{ds}/stage2_k{K}", ds=DATASETS, K=SIG_SIZES)
    return lst

rule all:
    input: _inputs_all
###############################################################################
# -------------------------  utility rules  -----------------------------------
###############################################################################
rule copy_matrix:
    input:  "data/raw/{ds}.csv"
    output: "data/processed/{ds}_matrix.csv"
    conda:  ENV_YAML
    shell:  "cp {input} {output}"

rule stage1_sysinfo:
    output: "results/{ds}/stage1/system_info.json"
    run:
        import platform, time
        out = pathlib.Path(output[0]); out.parent.mkdir(parents=True, exist_ok=True)
        meta = dict(timestamp=time.strftime("%Y‑%m‑%dT%H:%M:%S"),
                    python=platform.python_version(),
                    cores = mp.cpu_count(),
                    ram_GiB = round(psutil.virtual_memory().total/2**30, 1),
                    run_cores = RUN_CORES)
        out.write_text(json.dumps(meta, indent=2))
###############################################################################
# -------------------------------  S T A G E 1  -------------------------------
###############################################################################
rule mccv_stage1:
    input:  matrix="data/processed/{ds}_matrix.csv"
    output:
        metrics = "results/{ds}/stage1/metrics_k{K}.tsv",
        freq    = "results/{ds}/stage1/freq_k{K}.csv",
        sl_wts  = "results/{ds}/stage1/sl_weights_k{K}.tsv"
    params: k="{K}", n_splits=config["n_splits"]
    benchmark: "results/{ds}/stage1/wall_clock_k{K}.txt"
    conda: ENV_YAML
    script: "../scripts/python/mccv_stage1.py"

rule freeze_gene_panel:
    input:  "results/{ds}/stage1/freq_k{K}.csv"
    output:
        panel  = "results/{ds}/stage1/panel_k{K}.txt",
        counts = "results/{ds}/stage1/panel_k{K}_counts.txt"
    params: k="{K}"
    conda:  ENV_YAML
    script: "../scripts/python/freeze_gene_panel.py"
###############################################################################
