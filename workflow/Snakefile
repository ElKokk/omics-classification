rule host_analysis:
    input:
        expand("figures/{ds}/runtime/Speed_up.png", ds=DATASETS),
        expand("figures/{ds}/stage1_summary/{plot}.png", ds=DATASETS,
               plot=["MCE","Sensitivity","Specificity","SL_weights"]),
        expand("figures/{ds}/stage2_summary/{plot}.png", ds=DATASETS,
               plot=["MCE","Sensitivity","Specificity","SL_weights"]),
        expand("figures/{ds}/stage1_k{K}", ds=DATASETS, K=SIG_SIZES),
        expand("figures/{ds}/stage2_k{K}", ds=DATASETS, K=SIG_SIZES)
    output: touch("host_analysis.complete")
